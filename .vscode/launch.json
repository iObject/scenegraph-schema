  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "protocol": "auto",
      "program": "${workspaceRoot}/src/index.ts",
      "preLaunchTask": "tsc",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "smartStep": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"]
    }
  ]
}
